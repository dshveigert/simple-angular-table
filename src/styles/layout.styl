html, body
  background-color #ffffff
  font-weight normal
  font-size 14px
  font-family Arial, sans-serif
  color PrimaryColor_01
  min-width 1000px
  margin 0
  padding 0

section
  max-width 1000px
  margin 0 auto
  padding 30px

h1
  margin 0 0 30px
  fsz(18px, 1, uppercase)

.table-content
  width 100%
  fsz(11px)
  border-collapse collapse
  border-spacing 0
  thead
    background SecondaryColor_04
    th
      fsz(10px, 1.2)
      font-weight 400
      text-align left
      padding 5px 2px
      &:first-of-type
        padding-left 5px
      &:last-of-type
        padding-right 5px
  tbody
    td
      vertical-align top
      text-align left
      padding 8px 2px
      &:first-of-type
        padding-left 5px
      &:last-of-type
        padding-right 5px
    tr
      border-bottom 1px solid PrimaryColor_03

a
  color SecondaryColor_04
  text-decoration none
  &:hover
    color PrimaryColor_02
    text-decoration underline
