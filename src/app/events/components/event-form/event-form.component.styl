@import "helpers.styl"

.row
  margin 0 0 30px 0
  label
    display inline-block
    margin 0 30px 20px 0
    &:last-of-type
      margin-right 0
    input
      margin-left 20px
      outline none
      border 1px solid PrimaryColor_03
      box-shadow none
      &:focus
        border-color SecondaryColor_03
.action
  margin 30px 0
  .required
    margin 0 0 10px 0
  button
    display inline-block
    margin-right 10px
    min-width 100px
